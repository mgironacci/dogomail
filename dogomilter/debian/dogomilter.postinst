#!/bin/sh

set -e

if [ "$1" = "configure" ]; then
	if ! id -u dogomail >/dev/null 2>&1; then
		adduser --quiet --system --group --home /var/run/dogomail dogomail
	elif [ -n "$2" ]; then
		addgroup --quiet --system dogomail
		usermod -g dogomail dogomail
	fi
	chown -R dogomail:dogomail /var/log/dogomail
fi

#DEBHELPER#

exit 0

